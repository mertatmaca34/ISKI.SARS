@page
@model ISKI.SARS.WebUI.Pages.Tags.CreateModel

<h2>Create Tag</h2>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Tag.DisplayName" class="form-label"></label>
        <input asp-for="Tag.DisplayName" class="form-control" />
        <span asp-validation-for="Tag.DisplayName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Tag.OpcPath" class="form-label"></label>
        <input asp-for="Tag.OpcPath" class="form-control" />
        <span asp-validation-for="Tag.OpcPath" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Tag.PullInterval" class="form-label"></label>
        <input asp-for="Tag.PullInterval" class="form-control" />
        <span asp-validation-for="Tag.PullInterval" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
