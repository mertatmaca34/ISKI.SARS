@page
@model ISKI.SARS.WebUI.Pages.Auths.LoginModel
@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Credentials.Email" class="form-label"></label>
        <input asp-for="Credentials.Email" class="form-control" />
        <span asp-validation-for="Credentials.Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Credentials.Password" class="form-label"></label>
        <input asp-for="Credentials.Password" type="password" class="form-control" />
        <span asp-validation-for="Credentials.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
