@model NewReportFromTemplateViewModel
@{
    ViewData["Title"] = "Yeni Rapor Oluştur";
}

<div class="p-10">
    <h2 class="text-3xl font-bold text-blue-700 mb-6 flex items-center gap-2">
        <i class="fa fa-file-alt"></i> Yeni Rapor Oluştur
    </h2>

    <form method="post" asp-action="Index" class="space-y-4">
        <div class="grid grid-cols-3 gap-4">
            <input type="text" asp-for="Query.TemplateName" placeholder="Şablon Adı" class="form-input" />
            <input type="date" asp-for="Query.StartDate" class="form-input" />
            <input type="date" asp-for="Query.EndDate" class="form-input" />
        </div>

        <div class="grid grid-cols-3 gap-4">
            <select asp-for="Query.SortBy" class="form-select">
                <option value="">Sırala</option>
                <option value="Name">Ad</option>
                <option value="CreatedDate">Oluşturulma Tarihi</option>
            </select>

            <select asp-for="Query.SortDirection" class="form-select">
                <option value="">Sıralama Yönü</option>
                <option value="asc">Artan</option>
                <option value="desc">Azalan</option>
            </select>

            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">Filtrele</button>
        </div>
    </form>

    <div class="mt-8">
        <table class="table-auto w-full border mt-4">
            <thead>
                <tr class="bg-gray-100">
                    <th class="p-2">Ad</th>
                    <th class="p-2">Endpoint</th>
                    <th class="p-2">Sıklık</th>
                    <th class="p-2">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items.Any())
                {
                    foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="p-2">@item.Name</td>
                            <td class="p-2">@item.OpcEndpoint</td>
                            <td class="p-2">@item.PullInterval sn</td>
                            <td class="p-2">
                                <form method="post" asp-action="ConfirmTemplate" asp-route-id="@item.Id">
                                    <input type="hidden" name="SelectedTemplateJson" value="@Json.Serialize(item)" />
                                    <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded">Rapor Oluştur</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center p-4 text-gray-500">Kayıt bulunamadı.</td>
                    </tr>
                }
            </tbody>
        </table>

        <p class="text-sm text-gray-600 mt-2">Toplam: @Model.Items.Count kayıt gösteriliyor</p>
    </div>
</div>
