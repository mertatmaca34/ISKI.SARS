@model ISKI.SARS.WebUI.Features.NewReport.Models.NewReportFromTemplateViewModel
@{
    ViewData["Title"] = "Şablondan Rapor";
}
<div class="p-6">
    <h2 class="text-2xl font-bold mb-4">Şablon: @Model.SelectedTemplate.Name</h2>
    <div class="mb-4">
        <p><strong>Şablon ID:</strong> @Model.SelectedTemplate.Id</p>
        <p><strong>Endpoint:</strong> @Model.SelectedTemplate.OpcEndpoint</p>
        <p><strong>Çekme Aralığı:</strong> @Model.SelectedTemplate.PullInterval sn</p>
    </div>
    <form method="post">
        <div class="mb-4">
            <label class="block font-semibold mb-2">Tag Seçimi</label>
            <div class="grid grid-cols-2 gap-2">
                @foreach (var tag in Model.AllTags)
                {
                    <label class="flex items-center space-x-2">
                        <input type="checkbox" name="SelectedTags" value="@tag.TagNodeId" class="form-checkbox" />
                        <span>@tag.TagName (@tag.TagNodeId)</span>
                    </label>
                }
            </div>
        </div>
    </form>
</div>
