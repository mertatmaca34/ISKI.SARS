@model ISKI.SARS.WebUI.Models.ReportTemplateListViewModel

@{
    ViewData["Title"] = "Yeni Rapor OluÅŸtur";
    int page = Model.Page;
    int pageSize = Model.PageSize;
    int total = Model.TotalCount;
    int pageCount = (int)Math.Ceiling((double)total / pageSize);
}

<div class="p-6">
    <h2 class="text-2xl font-bold text-blue-700 mb-4">ðŸ“„ Rapor ÅžablonlarÄ±</h2>

    <form method="get" class="mb-4 flex flex-wrap gap-2">
        <input type="text" name="name" value="@Model.Name" placeholder="Ad" class="border p-1" />
        <input type="date" name="startDate" value="@(Model.StartDate?.ToString("yyyy-MM-dd"))" class="border p-1" />
        <input type="date" name="endDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd"))" class="border p-1" />
        <select name="sortField" class="border p-1">
            <option value="Name" @(Model.SortField == "Name" ? "selected" : "")>Name</option>
            <option value="PullInterval" @(Model.SortField == "PullInterval" ? "selected" : "")>PullInterval</option>
            <option value="CreatedDate" @(Model.SortField == "CreatedDate" ? "selected" : "")>CreatedDate</option>
        </select>
        <select name="sortDirection" class="border p-1">
            <option value="asc" @(Model.SortDirection == "asc" ? "selected" : "")>asc</option>
            <option value="desc" @(Model.SortDirection == "desc" ? "selected" : "")>desc</option>
        </select>
        <button type="submit" class="bg-blue-600 text-white px-3 py-1 rounded">Filtrele</button>
    </form>

    <table class="w-full text-sm border border-gray-300">
        <thead class="bg-blue-100">
            <tr>
                <th class="p-2 border">Ad</th>
                <th class="p-2 border">OPC Endpoint</th>
                <th class="p-2 border">Ã‡ekme AralÄ±ÄŸÄ±</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr class="border-b">
                    <td class="p-2">@item.Name</td>
                    <td class="p-2">@item.OpcEndpoint</td>
                    <td class="p-2">@item.PullInterval sn</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Sayfalama -->
    <div class="mt-4 flex gap-2">
        @for (int i = 1; i <= pageCount; i++)
        {
            <a href="?page=@i&pageSize=@pageSize&name=@Model.Name&startDate=@(Model.StartDate?.ToString("yyyy-MM-dd"))&endDate=@(Model.EndDate?.ToString("yyyy-MM-dd"))&sortField=@Model.SortField&sortDirection=@Model.SortDirection"
               class="px-3 py-1 rounded border @(i == page ? "bg-blue-600 text-white" : "bg-white text-blue-700")">
                @i
            </a>
        }
    </div>
</div>
