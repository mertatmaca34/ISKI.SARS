@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    var title = ViewData["Title"] ?? "İSKİ Atıksu Arıtma Tesisleri";
    var userFirstName = HttpContextAccessor.HttpContext?.Session.GetString("UserFirstName") ?? "Admin";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>
<body class="flex flex-col h-screen">

    <!-- Header -->
    <header class="bg-blue-600 text-white flex justify-between items-center px-6 py-3">
        <h1 class="font-semibold text-lg">💧 İSKİ Atıksu Arıtma Tesisleri</h1>
        <button onclick="window.location.href='/UserInfo/Index'" class="flex items-center gap-2 hover:underline">
            <span>@userFirstName</span>
            <div class="bg-green-500 rounded-full w-8 h-8 flex items-center justify-center text-white">
                @(userFirstName.Length > 0 ? userFirstName[0].ToString().ToUpper() : "A")
            </div>
        </button>
    </header>

    <!-- İçerik Alanı -->
    <div class="flex flex-1 overflow-hidden">
        <!-- Sidebar -->
        <aside class="bg-blue-100 w-64 flex flex-col py-6 px-4 space-y-2">
            <a href="/Home/Index" class="text-left px-4 py-2 rounded hover:bg-blue-200 flex items-center gap-2">🏠 Ana Sayfa</a>
            <a href="/NewTemplate/Index" class="text-left px-4 py-2 rounded hover:bg-blue-200 flex items-center gap-2">
                ➕ Yeni Rapor Şablonu
            </a>
            <a href="#" class="text-left px-4 py-2 rounded hover:bg-blue-200 flex items-center gap-2">📄 Yeni Rapor Oluştur</a>
            <a href="#" class="text-left px-4 py-2 rounded hover:bg-blue-200 flex items-center gap-2">📊 Raporlar</a>

            <div class="mt-auto">
                <a href="/Login/Logout" class="w-full text-left px-4 py-2 rounded hover:bg-red-200 text-red-600 flex items-center gap-2">🚪 Oturumu Kapat</a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 bg-gray-100 p-6 overflow-y-auto">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
