@model IEnumerable<ISKI.SARS.WebUI.Models.ReportTemplateViewModel>
@{
    ViewData["Title"] = "Reports";
}
<h2>Report Templates</h2>
<a asp-action="Create" class="btn btn-primary mb-2">Add Template</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Type</td>
                <td>
                    <a asp-action="DownloadPdf" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">PDF</a>
                    <a asp-action="DownloadExcel" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Excel</a>
                    <a asp-controller="Tags" asp-action="Index" asp-route-templateId="@item.Id" class="btn btn-sm btn-info">Tags</a>
                </td>
            </tr>
        }
    </tbody>
</table>
